# Build stage
FROM golang:1.21-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the job binary
RUN CGO_ENABLED=0 GOOS=linux go build -o /job ./cmd/job

# Runtime stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates tzdata

WORKDIR /app

COPY --from=builder /job .

# Cloud Run Jobs run the container to completion
ENTRYPOINT ["/app/job"]
